<h1>Update Building Form</h1>

<%= form_for(@building) do |f| %>
    <%= f.label :name %><br>
    <%= f.text_field :name %><br>
    <br>
    <%= f.label :country %><br>
    <%= f.text_field :country %><br>
    <br>
    <%= f.label :address %><br>
    <%= f.text_field :address %><br>
    <br>
    <%= f.label "Rent per Month" %><br>
    <%= f.number_field :rent_per_floor %><br>
    <br>
    <%= f.label :number_of_floors %><br>
    <%= f.number_field :number_of_floors %><br>

    <%= f.submit %>
<% end %>